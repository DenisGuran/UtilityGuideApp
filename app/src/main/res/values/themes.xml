<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CsApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">#000000</item>
        <item name="colorOnPrimary">#37FFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">#000000</item>
    </style>

    <!-- Bottom navigation font. -->
    <style name="BottomNavigationStyle"
        parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/lora_italic_bold</item>
    </style>

    <style name="MaterialButton_AuthenticationStyle">
        <item name="android:fontFamily">@font/lora_italic_bold</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textColor">@color/auth_button_text_color</item>
        <item name="backgroundTint">@color/auth_button_background_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="EditText_AuthenticationStyle">
        <item name="android:background">@drawable/custom_input</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/input_text_color</item>
        <item name="android:textColorHint">@color/input_text_color</item>
    </style>

    <style name="TextInputLayout_AuthenticationStyle">
        <item name="boxBackgroundMode">none</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintEnabled">false</item>
        <item name="errorEnabled">true</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="helperTextTextColor">@color/red</item>
    </style>

    <style name="EditText_UtilityStyle">
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textColorHint">@color/edit_text_line_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">@color/edit_text_line_color</item>
        <item name="android:fontFamily">@font/lora_italic_semibold</item>
        <item name="android:inputType">text</item>
        <item name="android:ellipsize">end</item>
        <item name="maxLines">1</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="TextView_Tutorial_TitleStyle">
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/lora_italic_semibold</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="TextView_Authentication_TitleStyle">
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/lora_italic_semibold</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="Tickrate_Text">
        <item name="android:textColor">#6AFF00</item>
        <item name="android:textSize">12sp</item>
    </style>



</resources>