<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CsApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">#000000</item>
        <item name="colorOnPrimary">#37FFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">#000000</item>
    </style>

    <style name="MaterialButton_AuthenticationStyle">
        <item name="android:fontFamily">@font/lora_italic_bold</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textColor">@color/auth_button_text_color</item>
        <item name="backgroundTint">@color/auth_button_background_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Chip_UtilityStyle">
        <item name="android:textColor">@color/icon_color</item>
        <item name="chipIconTint">@color/yellow</item>
        <item name="android:checked">false</item>
        <item name="chipSurfaceColor">@color/black_transparent</item>
        <item name="chipBackgroundColor">@color/black_transparent</item>
        <item name="android:checkable">true</item>
        <item name="checkedIconVisible">true</item>
    </style>

    <style name="EditText_AuthenticationStyle">
        <item name="android:background">@drawable/custom_input</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/input_text_color</item>
        <item name="android:textColorHint">@color/input_text_color</item>
    </style>

    <style name="TextInputLayout_AuthenticationStyle">
        <item name="boxBackgroundMode">none</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintEnabled">false</item>
        <item name="errorEnabled">true</item>
        <item name="endIconMode">clear_text</item>

        <item name="android:layout_marginTop">4dp</item>
        <item name="helperTextTextColor">@color/helper_text_color</item>
    </style>

    <style name="EditText_UtilityStyle">
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textColorHint">@color/edit_text_line_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">@color/edit_text_line_color</item>
        <item name="android:fontFamily">@font/lora_italic_semibold</item>
        <item name="android:inputType">text</item>
        <item name="android:ellipsize">end</item>
        <item name="maxLines">1</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@color/transparent</item>
        <item name="searchHintIcon">@null</item>
        <item name="iconifiedByDefault">false</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="TextView_Tutorial_TitleStyle" parent="@style/Outlined_Text">
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/lora_italic_semibold</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="TextView_Profile_Preferences">
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/lora_italic_semibold</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="TextView_Authentication_TitleStyle">
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/lora_italic_semibold</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="Tickrate_Text">
        <item name="android:textColor">@color/tickrate_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Outlined_Text">
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">-2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">0.01</item>
    </style>



</resources>