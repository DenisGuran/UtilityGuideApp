<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/cardview_shadow_end_color"
    android:layout_gravity="center"
    android:paddingBottom="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/pos_card"
        android:layout_width="330dp"
        android:layout_height="100dp"
        app:cardBackgroundColor="@color/cardview_shadow_end_color"
        app:cardCornerRadius="8dp"
        android:layout_gravity="center"
        app:cardElevation="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/pos_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:contentDescription="@string/smokes"
                android:layout_marginBottom="5dp"
                android:src="@drawable/tutorial_layout_bg"/>

            <TextView
                android:id="@+id/pos_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/stairs"
                android:fontFamily="@font/lora_italic_semibold"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="26sp"/>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>