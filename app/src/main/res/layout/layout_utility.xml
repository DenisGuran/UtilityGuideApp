<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingBottom="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/pos_card"
        android:layout_width="300dp"
        android:layout_height="93dp"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="10dp"
        app:cardElevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/pos_image"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:contentDescription="@string/smokes"
            android:scaleType="centerCrop"
            android:src="@drawable/mirage_background" />

        <TextView
            android:id="@+id/pos_name"
            style="@style/Outlined_Text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/lora_italic_bold"
            android:gravity="center"
            android:text="@string/stairs"
            android:textColor="@color/white"
            android:textSize="22sp" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>